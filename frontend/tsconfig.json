{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./src/shims-vue.d.ts",
    "./src/**/*",
    "./src/**/*.vue",
    "./src/**/*.ts",
    "./src/**/*.*.ts"
  ],
  "exclude": ["./src/**/__tests__/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out",
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": true,
    "noImplicitThis": true,
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "verbatimModuleSyntax": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
